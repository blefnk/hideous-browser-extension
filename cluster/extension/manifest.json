{
  "author": "Nazar Kornienko Blefnk",
  "background": {
    "persistent": false,
    "scripts": ["utils/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "assets/icons/frame-48.png"
    },
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "50.0"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["content/youtube.js"],
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_end"
    }
  ],
  "description": "ðŸªš A browser extension that indicates whether a website or YouTube video was created by nasty creatures or uses their creations in its own and tries to explain the reason.",
  "homepage_url": "https://github.com/blefnk/hideous-browser-extension",
  "icons": {
    "48": "assets/icons/frame-48.png"
  },
  "manifest_version": 2,
  "name": "Hideous",
  "permissions": [
    "*://*.youtube.com/*",
    "activeTab",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "version": "0.1.0"
}
